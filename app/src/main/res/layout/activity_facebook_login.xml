<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_facebook_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anjali.cimil_application.FacebookLogin"
    android:background="#4EBEEE">

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/profile_picture"
        android:layout_width="368dp"
        android:layout_height="200dp"
       android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/about_user_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="30dp"
        android:textSize="10sp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/profile_picture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/about_user_religion"

        />
    <TextView
        android:id="@+id/about_user_religion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="30dp"
        android:textSize="10sp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/profile_picture"
       app:layout_constraintLeft_toRightOf="@+id/about_user_data"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/user_relationship_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:textSize="10sp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/about_user_data"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_user_name"
        />
    <TextView
        android:id="@+id/txt_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:textSize="10sp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/about_user_religion"
        app:layout_constraintLeft_toRightOf="@+id/user_relationship_status"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/txt_user_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:textSize="10sp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/user_relationship_status"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_user_gender"
        />
    <TextView
        android:id="@+id/txt_user_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:textSize="10sp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_name"
        app:layout_constraintLeft_toRightOf="@+id/txt_user_age"
        app:layout_constraintRight_toRightOf="parent"

        />
    <TextView
        android:id="@+id/txt_user_current_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:textSize="10sp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_age"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_user_hometown"

        />
    <TextView
        android:id="@+id/txt_user_hometown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:textSize="10sp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_gender"
        app:layout_constraintLeft_toRightOf="@+id/txt_user_current_loc"
        app:layout_constraintRight_toRightOf="parent"

        />
    <Button
        android:id="@+id/logout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



</android.support.constraint.ConstraintLayout>
