<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.anjali.cimil_application.PhoneFragment"
    android:background="#4EBEEE">

    <TextView
        android:id="@+id/submit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="#405E9B"
        android:clickable="true"
        android:gravity="center"
        android:text="Submit"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
       app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/subheader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/edit_phone"
        android:gravity="center">
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:hint="Phone"
            android:textSize="16sp"
            android:inputType="phone"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/subheader"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textAlignment="gravity"
        android:maxLines="4"
        android:text="Please enter your phone number. Your mobile number will not be shared with a third party as we value and respect your privacy."
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_marginStart="30dp" />

    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/cimil"
        android:text="cimil"
        android:textAllCaps="true"
        android:id="@+id/header"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:textSize="30sp"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        tools:layout_editor_absoluteX="0dp" />



</android.support.constraint.ConstraintLayout>
